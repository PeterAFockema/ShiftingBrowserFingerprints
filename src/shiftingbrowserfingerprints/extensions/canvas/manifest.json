{
  "name": "Canvas Extension",
  "description": "Base Level Extension to inject a fake response to protect against canvas fingerprinting",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "content_scripts": [
	  {
		  "world":"MAIN",
      "all_frames":true,
      "match_origin_as_fallback":true,
      "matches": ["*://*/*"],
      "run_at":"document_start",
		  "js":["injection_activity/content_script/page_context/inject.js"]
	  },
	  {
		  "world":"ISOLATED",
      "all_frames":true,
      "match_origin_as_fallback":true,
      "matches": ["*://*/*"],
      "run_at":"document_start",
		  "js":["injection_activity/content_script/inject.js"]
	  }
  ]
}
